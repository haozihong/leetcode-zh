    "version": "2.0.0",
    "tasks": [
        {
            "label": "leet_cpp make ",
            "type": "shell",
            "command": "mingw32-make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "leet_cpp clean",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "clean"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}